<div class="container">
  <h1>My tasks</h1>

  <ul>
    <% @tasks.each do |t| %>
      <li>
        <%if t.completed %>
          <i class="far fa-check-square"></i> <%= link_to t.title, show_path(t.id) %>
        <% else %>
          <i class="far fa-square"></i> <%= link_to t.title, show_path(t.id) %>
        <% end %>
      </li>
    <% end %>
  </ul>

  <i class="fas fa-plus"></i> <%= link_to 'Add a new task', new_path %>
</div>
